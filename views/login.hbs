<div class="container-fluid">
  <div class="row mt centered loginArea">
    <div class="col-md-8 col-md-offset-3">

        <!--FormBox-->
        <div class="col-sm-8 loginBox">
            <div class="form-header formHeadBox">
                <h2 class="form-signin-heading headerTitle">Please Sign In</h2>
            </div>

            <form  id="log-form" name="log-form" class="form-signin form-horizontal" role="form" method="POST">

                <!--First Name-->
                <div class="form-group mt">
                    <div class="col-sm-10 col-sm-offset-2">
                        <div class="col-sm-9">
                            <label for="inputUsername" class="control-label leftInputHeader">First name</label>
                            <input type="text" class="form-control input-lg required" id="firstName" name="firstName" placeholder="First name">
                        </div>
                    </div>
                </div>

                <!-- Last Name-->
                <div class="form-group mt">
                    <div class="col-sm-10 col-sm-offset-2">
                        <div class="col-sm-9">
                            <label for="inputUsername" class="control-label leftInputHeader">Last name</label>
                            <input type="text" class="form-control input-lg required" id="lastName" name="lastName" placeholder="Last name">
                        </div>
                    </div>
                </div>

                <!--Password-->
                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <div class="col-sm-9">
                            <label for="inputPassword" class="control-label leftInputHeader">Password</label>
                            <input type="password" class="form-control input-lg required" id="inputPassword" name="inputPassword" placeholder="Password">
                        </div>
                    </div>
                </div>

                <!--Button-->
                <div class="form-group">
                    <div class="col-sm-10 mt col-sm-offset-1">
                        <button type="submit" class="btn btn-lg btn-block signInButton">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>