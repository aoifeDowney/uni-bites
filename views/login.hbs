<div class="container">
  <div class="row mt centered">
    <div class="col-md-8 col-md-offset-2">

        <!--FormBox-->
        <div class="col-sm-10">
            <div class="form-header">
                <h2 class="form-signin-heading">Please Sign In</h2>
            </div>

            <form  id="log-form" name="log-form" class="form-signin form-horizontal" role="form" method="POST">

                <!--First Name-->
                <div class="form-group mt">
                    <div class="col-sm-10 col-sm-offset-2">
                        <div class="col-sm-3">
                            <label for="inputUsername" class="control-label">Username</label>
                        </div>

                        <div class="col-sm-9">
                            <input type="text" class="form-control input-lg required" id="firstName" name="firstName" placeholder="First Name">
                        </div>
                    </div>
                </div>

                <!-- Last Name-->
                <div class="form-group mt">
                    <div class="col-sm-10 col-sm-offset-2">
                        <div class="col-sm-3">
                            <label for="inputUsername" class="control-label">Username</label>
                        </div>

                        <div class="col-sm-9">
                            <input type="text" class="form-control input-lg required" id="firstName" name="firstName" placeholder="First Name">
                        </div>
                    </div>
                </div>

                <!--Password-->
                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <div class="col-sm-3">
                            <label for="inputPassword" class="control-label">Password</label>
                        </div>

                        <div class="col-sm-9">
                            <input type="password" class="form-control input-lg required" id="inputPassword" name="inputPassword" placeholder="@password">
                        </div>
                    </div>

                        <div class="form-group">
                            <div class="row col-sm-offset-2 col-sm-10 mt">
                                <button type="submit" class="btn btn-warning btn-lg">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</div>